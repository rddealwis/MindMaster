<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/difficulty_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/difficulty_TextView"
        android:layout_marginLeft="8dp"
        android:adjustViewBounds="true"
        android:maxHeight="45dp"
        android:maxWidth="45dp"
        android:paddingBottom="10dip"
        android:src="@drawable/img_difficulty" />

    <TextView
        android:id="@+id/difficulty_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/difficulty_ImageView"
        android:paddingBottom="10dip"
        android:text="Difficulty"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <Spinner
        android:id="@+id/difficulty_Spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/difficulty_TextView"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/difficulty_TextView" />

</RelativeLayout>
